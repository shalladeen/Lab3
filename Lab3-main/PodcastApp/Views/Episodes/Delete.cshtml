@model PodcastApp.Models.Episode

@{
    ViewData["Title"] = "Delete Episode";
}

<h1 class="text-center text-danger fw-bold mb-4">Delete Episode</h1>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
    <h4 class="text-warning">Are you sure you want to delete this episode?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-4 fw-semibold">Podcast</dt>
        <dd class="col-sm-8">
            @(Model.Podcast != null ? Model.Podcast.Title : $"Podcast ID: {Model.PodcastID}")
        </dd>

        <dt class="col-sm-4 fw-semibold">Title</dt>
        <dd class="col-sm-8">@Model.Title</dd>

        <dt class="col-sm-4 fw-semibold">Description</dt>
        <dd class="col-sm-8">@Model.Description</dd>

        <dt class="col-sm-4 fw-semibold">Release Date</dt>
        <dd class="col-sm-8">@Model.ReleaseDate.ToLocalTime()</dd>

        <dt class="col-sm-4 fw-semibold">Duration</dt>
        <dd class="col-sm-8">@Model.Duration minutes</dd>

        <dt class="col-sm-4 fw-semibold">Play Count</dt>
        <dd class="col-sm-8">@Model.PlayCount</dd>

        <dt class="col-sm-4 fw-semibold">Audio File</dt>
        <dd class="col-sm-8">
            @if (!string.IsNullOrEmpty(Model.AudioFileUrl))
            {
                <a href="@Model.AudioFileUrl" target="_blank" class="text-decoration-none">
                    Open in S3
                </a>
            }
            else
            {
                <span class="text-muted">No file uploaded</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="EpisodeID" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

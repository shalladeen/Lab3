@model PodcastApp.Models.Podcast

@{
    ViewData["Title"] = "Create Podcast";
}

<h1 class="fw-bold text-primary mb-4">Create Podcast</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Podcast Title -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter podcast title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Podcast Description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-semibold"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your podcast"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- ?? Upload Audio/Video File -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Upload Audio/Video File</label>
            <input type="file" name="media" class="form-control" accept="audio/*,video/*" />
            <div class="form-text">Optional: Upload your podcast audio or video file (MP3, MP4, WAV, etc.)</div>
        </div>

        <!-- Hidden CreatorID and Date -->
        <input type="hidden" asp-for="CreatorID" />
        <input type="hidden" asp-for="CreatedDate" value="@DateTime.UtcNow" />

        <!-- Buttons -->
        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-success">Create Podcast</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

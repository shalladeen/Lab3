@model IEnumerable<PodcastApp.Models.Podcast>

@{
    ViewData["Title"] = "Podcasts";
}

<h1 class="fw-bold text-primary mb-4">All Podcasts</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">? Create New Podcast</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Title)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>@Html.DisplayNameFor(m => m.CreatorID)</th>
            <th>@Html.DisplayNameFor(m => m.CreatedDate)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreatorID</td>
                <td>@item.CreatedDate.ToLocalTime().ToString("f")</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.PodcastID" class="btn btn-outline-info btn-sm me-1">View</a>
                    <a asp-action="Edit" asp-route-id="@item.PodcastID" class="btn btn-outline-primary btn-sm me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.PodcastID" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

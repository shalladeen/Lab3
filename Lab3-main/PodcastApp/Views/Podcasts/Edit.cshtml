@model PodcastApp.Models.Podcast

@{
    ViewData["Title"] = "Edit Podcast";
}

<h1 class="fw-bold text-primary mb-4">Edit Podcast</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="PodcastID" />
        <input type="hidden" asp-for="CreatorID" />
        <input type="hidden" asp-for="CreatedDate" />

        <!-- Podcast Title -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-semibold"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter podcast title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-semibold"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your podcast"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- ?? Optional New Media Upload -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Upload New Audio/Video File</label>
            <input type="file" name="media" class="form-control" accept="audio/*,video/*" />
            <div class="form-text">
                Optional — upload a new audio or video file to replace the existing one.
            </div>
        </div>

        <!-- ?? Show existing media (if mentioned in description) -->
        @if (!string.IsNullOrEmpty(Model.Description) && Model.Description.Contains("https://"))
        {
            <div class="mt-3">
                <p class="fw-semibold">Current Media:</p>
                @{
                    var linkStart = Model.Description.IndexOf("http");
                    var link = linkStart >= 0 ? Model.Description.Substring(linkStart).Split(' ')[0].TrimEnd(')', '"') : null;
                }

                @if (!string.IsNullOrEmpty(link))
                {
                    if (link.EndsWith(".mp3") || link.EndsWith(".wav"))
                    {
                        <audio controls class="w-100 mt-2">
                            <source src="@link" type="audio/mpeg" />
                            Your browser does not support the audio element.
                        </audio>
                    }
                    else if (link.EndsWith(".mp4"))
                    {
                        <video controls class="w-100 mt-2" style="max-height: 300px;">
                            <source src="@link" type="video/mp4" />
                            Your browser does not support the video element.
                        </video>
                    }
                    else
                    {
                        <a href="@link" target="_blank" class="btn btn-outline-primary mt-2">View Uploaded Media</a>
                    }
                }
            </div>
        }

        <!-- Buttons -->
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">?? Save Changes</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model PodcastApp.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow-lg p-4" style="width: 420px; border-radius: 14px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Create an Account</h2>
            <p class="text-muted">Join the Podcast community today 🎧</p>
        </div>

        <form asp-action="Register" method="post">
            <!-- Username -->
            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Choose a username" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label fw-semibold">Password</label>
                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="••••••••" required />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <!-- Role selection -->
            <div class="mb-3">
                <label asp-for="Role" class="form-label fw-semibold">Register as</label>
                <select asp-for="Role" class="form-select">
                    <option value="Listener">Listener / Viewer</option>
                    <option value="Podcaster">Podcaster</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">Register</button>
        </form>

        <div class="text-center mt-3">
            <small>
                Already have an account?
                <a asp-controller="Users" asp-action="Login" class="text-decoration-none fw-semibold text-primary">
                    Login here
                </a>
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
